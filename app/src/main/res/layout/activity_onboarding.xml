<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient_home"
    android:orientation="vertical"
    android:padding="@dimen/_8dp">

    <LinearLayout
        android:id="@+id/llNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_16dp"
        android:background="@drawable/shadow"
        android:padding="@dimen/_16dp">

        <TextView
            android:id="@+id/tvNewUser"
            style="@style/TextStyleFollowUpQuestion"
            android:layout_width="@dimen/_148dp"
            android:layout_height="@dimen/_148dp"
            android:layout_gravity="center"
            android:background="@drawable/background_button"
            android:contentDescription="@string/new_user"
            android:gravity="center"
            android:text="@string/new_user"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOldUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_16dp"
        android:background="@drawable/shadow"
        android:padding="@dimen/_16dp">

        <TextView
            android:id="@+id/tvOldUser"
            style="@style/TextStyleFollowUpQuestion"
            android:layout_width="@dimen/_148dp"
            android:layout_height="@dimen/_148dp"
            android:layout_gravity="center"
            android:background="@drawable/background_button"
            android:contentDescription="@string/old_user"
            android:gravity="center"
            android:text="@string/old_user"
            android:textAlignment="center" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTitle"
        style="@style/AppNameStyleTextRegular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name" />


    <TextView
        android:id="@+id/tvUsername"
        style="@style/AppNameStyleTextRegular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/llNewUser"
        android:layout_below="@+id/tvTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_16dp"
        android:gravity="center"
        android:textAlignment="center" />
</RelativeLayout>